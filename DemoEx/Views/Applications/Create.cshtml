@model DemoEx.Models.Application

@{
    ViewData["Title"] = "Create";
}

<h1>Создание заявки</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="NameEquipment" class="control-label">Наименование оборудования</label>
                <input asp-for="NameEquipment" class="form-control" />
                <span asp-validation-for="NameEquipment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTypeEquipment" class="control-label">Тип оборудования</label>
                <select asp-for="IdTypeEquipment" class="form-control" asp-items="ViewBag.IdTypeEquipment"></select>
            </div>
            <div class="form-group">
                <label asp-for="NameClient" class="control-label">Ваше имя</label>
                <input asp-for="NameClient" class="form-control" />
                <span asp-validation-for="NameClient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTypeProblem" class="control-label">Тип проблемы</label>
                <select asp-for="IdTypeProblem" class="form-control" asp-items="ViewBag.IdTypeProblem"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
